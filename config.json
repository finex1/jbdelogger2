{
    "workflowApiVersion": "1.1",
    "metaData": {
       "icon": "images/icon.png",
       "category": "message"
    },
    "type": "REST",
    "lang": {
       "en-US": {
           "name": "JB DE Logger",
           "description": "Used to log customers before exiting a journey",
