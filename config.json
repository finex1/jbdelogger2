		   "entryTypeLabel": "Is it a journey entry or exit DE log",
		   "objectiveLabel": "Has the journey objective been met or not met",
		   "reasonLabel": "Add a reason"
       }
    },
    "arguments": {
        "execute": {
            "inArguments": [
                {
                    "emailAddress": "{{InteractionDefaults.Email}}"
                },
                {
                    "phoneNumber": "{{Contact.Default.PhoneNumber}}"
                },
                {
                    "journeytype": ""
                },
                {
                    "entrytype": ""
                },
                {
                    "objective": ""
                },
                {
                    "reason": ""
                }
            ],
            "outArguments": [
                {
                    "foundSignupDate": ""
                }
            ],
            "url": "https://jbdelogger1.herokuapp.com/execute"
        }
    },
    "configurationArguments": {
	"applicationExtensionKey": "387a310e-d606-41cb-a879-a4760b8f5eb9",
       "save": {
           "url": "URI/for/your/activity/save"
       },
       "publish": {
           "url": "https://jbdelogger1.herokuapp.com/"
       },
       "validate": {
           "url": "URI/for/your/activity/validate"
       },
       "stop": {
           "url": "URI/for/your/activity/stop"
       }
    },
    "wizardSteps": [
       { "label": "Step 1", "key": "step1" },
       { "label": "Step 2", "key": "step2" }       
    ],
    "userInterfaces": {
       "configModal": {
           "height": 200,
           "width": 300,
           "fullscreen": true
       },
		"runningModal": {
        "url": "index.html"
    },
    "runningHover": {
        "url": "index.html"
    },"summary": [
            {
                "valuePath": "arguments.journeytype",
                "label": "JourneyTypeLabel"
            },
            {
                "valuePath": "arguments.entrytype",
                "label": "entryTypeLabel"
            },
            {
                "valuePath": "arguments.objective",
                "label": "objectiveLabel"
            },
            {
                "valuePath": "arguments.reason",
                "label": "reasonLabel"
            }
			]
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                    {
                        "phoneNumber": {
                            "dataType": "Phone",
                            "isNullable": false,
                            "direction": "in"   
                        }
                    },
                    {
                        "emailAddress": {
                            "dataType": "Email",
                            "isNullable": false,
                            "direction": "in"
                        }
                    },
                    {
                        "journeytype": {
                            "dataType": "Text",
                            "isNullable": false,
                            "direction": "in"
                        }
                    },
                    {
                        "entrytype": {
                            "dataType": "Text",
                            "isNullable": false,
                            "direction": "in"
                        }
                    },
                    {
                        "objective": {
                            "dataType": "Text",
                            "isNullable": false,
                            "direction": "in"
                        }
                    },
                    {
                        "reason": {
                            "dataType": "Text",
                            "isNullable": false,
                            "direction": "in"
                        }
                    }
                ],
                "outArguments": [
                    {
                        "foundSignupDate": {
                            "dataType": "Date",
                            "direction": "out",
                            "access": "visible"
                        }
                    }
                ]
            }
        }
    }
}